<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.leoconnelly.connexus.MainActivity">

    <ImageButton
        android:id="@+id/VisitWeb"
        android:layout_width="420dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TalkToADocButton"
        android:background="#0000"
        app:srcCompat="@android:color/holo_blue_bright" />

    <ImageButton
        android:id="@+id/TalkToADocButton"
        android:layout_width="420dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/find_care_button"
        android:background="#0000"
        app:srcCompat="@android:color/holo_orange_dark" />

    <ImageButton
        android:id="@+id/find_care_button"
        android:layout_width="420dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/learn"
        android:background="#0000"
        app:srcCompat="@android:color/holo_purple" />

    <ImageButton
        android:id="@+id/learn"
        android:layout_width="420dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0000"
        app:srcCompat="@android:color/holo_blue_bright" />

    <ImageButton
        android:id="@+id/learn_Icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/learn_icon"
        android:background="@drawable/hs__screenshot_clear"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/find_care_button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="74dp"
        android:text="Learn"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TalkToADocButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="74dp"
        android:text="Visit Web"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/VisitWeb"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="74dp"
        android:text="Talk to a doctor"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TalkToADocButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="74dp"
        android:text="Find Care"
        android:textSize="28dp" />

</RelativeLayout>
